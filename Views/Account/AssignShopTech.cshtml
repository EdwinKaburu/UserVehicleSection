@model TechnicianModel
@{
    ViewData["Title"] = "AssignShopTech";
    Layout = "~/Views/Shared/_Layout.cshtml";


    string alert = ViewBag.AssignedTechSucess;

    if (alert != null)
    {
        <div class="callout success" data-closable>
            <h3>@alert</h3>
            <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

}

<h1>AssignShopTech</h1>


<form id="forms1" asp-action="AssignShopTech" asp-controller="Account" method="post">
    <div class="grid-container fluid">
        <div class="grid-x grid-margin-x">

            <div class="cell small-6">
                <label>
                    Select Services
                    <select id="combobox" class="serviceID" asp-for="AssignedService">
                        @foreach (var items in Model.ShopServices)
                        {
                            <option>@items.ServiceName</option>
                        }
                    </select>

                    @*<input asp-for="TechnicianDescription" />*@
                </label>
            </div>
            <div class="cell small-6">
                <label>
                    Assign Selected Technician
                    <select id="combobox" class="serviceID" asp-for="TechName">
                        @foreach (var item in Model.TechDbs)
                        {
                            <option>@item.TechnicianName</option>
                        }
                    </select>
                </label>
            </div>
            <div class="cell small-6">
                <button type="submit" class="button">Add New Service</button>
            </div>
            <div class="cell small-6">
                <a asp-action="ShopPortfolio" asp-controller="Account" asp-route-id="@Model.UserCookie" asp-route-status="true">Return To Shop-Portfolio</a>
            </div>

        </div>
    </div>
</form>