@model UserListVIew
@{
    ViewData["Title"] = "UserPortfolio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />


<div class="grid-container fluid">
    <div class="grid-x">
        <div class="cell shrink">
            <ul class="vertical tabs" data-tabs id="example-tabs">
                <li class="tabs-title is-active"><a href="#panel1v" aria-selected="true">Profile</a></li>
                <li class="tabs-title"><a href="#panel2v">Vehicles</a></li>
                <li class="tabs-title"><a href="#panel3v">Messages</a></li>
            </ul>
        </div>
        <div class="cell auto">
            <div class="tabs-content vertical" data-tabs-content="example-tabs">

                <div class="tabs-panel is-active" id="panel1v">

                    <div class="grid-container fluid">
                        <div class="grid-x">
                            <div class="cell shrink">
                                <div class="card">

                                    <img src="https://get.foundation/sites/docs/assets/img/orbit/02.jpg">

                                    <div class="card-section">

                                        <div class="grid-container fluid">

                                            <div class="grid-x grid-margin-x">

                                                <div class="cell small-6">
                                                    <label>Name</label>
                                                </div>
                                                <div class="cell small-6">
                                                    <label>@Model.User.UserName</label>
                                                </div>

                                                <div class="cell small-6">
                                                    <label>Email</label>
                                                </div>
                                                <div class="cell small-6">
                                                    <label>@Model.User.UserEmail</label>
                                                </div>

                                                <div class="cell small-6">
                                                    <label>Address</label>
                                                </div>
                                                <div class="cell small-6">
                                                    <label>@Model.User.UserAddress</label>
                                                </div>

                                                <div class="cell small-6">
                                                    <label>City</label>
                                                </div>
                                                <div class="cell small-6">
                                                    <label>@Model.User.UserCity</label>
                                                </div>


                                                <div class="cell small-6">
                                                    <label>County/Country/Region</label>
                                                </div>
                                                <div class="cell small-6">
                                                    <label>@Model.User.UserCountry</label>
                                                </div>


                                                <div class="cell small-6">
                                                    <label>Description</label>
                                                </div>
                                                <div class="cell small-6">
                                                    <label>@Model.User.UserDescription</label>
                                                </div>


                                            </div>

                                        </div>

                                    </div>
                                </div>

                            </div>
                            <div class="cell shrink" style="margin-left:10px">


                                <div class="grid-container fluid">

                                    <div class="grid-x">

                                        <div class="cell auto">
                                            <a class="button" asp-action="AccountManagement" asp-controller="Accounts">Sign Out</a>
                                            <button type="submit" class="button">Edit Profile</button>
                                        </div>

                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>

                <div class="tabs-panel" id="panel2v">

                    <ul class="tabs" data-tabs id="example-tabs">
                        <li class="tabs-title is-active"><a href="#panel1" aria-selected="true">Your Vehicles</a></li>
                        <li class="tabs-title"><a data-tabs-target="panel2" href="#panel2">Services History</a></li>
                    </ul>


                    <div class="tabs-content" data-tabs-content="example-tabs">
                        <div class="tabs-panel is-active" id="panel1">

                            <div class="grid-container fluid">

                                <div class="cell">
                                    <table class="hover">
                                        <thead>
                                            <tr>
                                                <th>Vehicle Make</th>
                                                <th>Vehicle Model</th>
                                                <th>Vehicle Year</th>
                                                <th>Vehicle Mileage</th>
                                                <th>Vehicle Vin Number</th>
                                                <th>Vehicle Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.UserVehDbs)
                                            {
                                                <tr>
                                                    <td>@item.VehicleMake</td>
                                                    <td>@item.VehicleModel</td>
                                                    <td>@item.VehicleYear</td>
                                                    <td>@item.VehicleMileage</td>
                                                    <td>@item.VehicleVinNum</td>
                                                    <td>
                                                        <div class="primary button-group">
                                                            <a onclick="location.href='@(Url.Action("GetShoppersReq","UserPort", new { vehID = item.VehicleId }))'" class="button">Submit Vehicle Request</a>
                                                        </div>

                                                    </td>
                                                </tr>
                                            }
                                            <tr>
                                                <td>Honda</td>
                                                <td>Accord</td>
                                                <td>2005</td>
                                                <td>345732</td>
                                                <td>A37873H322</td>
                                                <td>
                                                    @*<p><button class="button" data-open="exampleModal11">Click me for a modal</button></p>*@
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <div class="cell auto">
                                    <a class="button" asp-controller="UserPort" asp-action="Vehicle" asp-route-UserID="@Model.User.UserId"> Add New Vehicle </a>
                                </div>

                            </div>


                        </div>

                        <div class="tabs-panel" id="panel2">


                            <div class="grid-container fluid">

                                <div class="cell">
                                    <table class="hover">
                                        <thead>
                                            <tr>
                                                <th>Serviced</th>
                                                <th>Vehicle Make</th>
                                                <th>Vehicle Model</th>
                                                <th>Vehicle Year</th>
                                                <th>Service Req Name</th>
                                                <th>Service Req Date</th>
                                                <th>Service Req Message</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ServicedHistDbs)
                                            {
                                                <tr>
                                                    <td>@item.Serviced</td>
                                                    <td>@item.VehReq.Vehicle.VehicleMake</td>
                                                    <td>@item.VehReq.Vehicle.VehicleModel</td>
                                                    <td>@item.VehReq.Vehicle.VehicleYear</td>
                                                    <td>@item.VehReq.VehReqName</td>
                                                    <td>@item.VehReq.VehReqDate</td>
                                                    <td>@item.VehReq.VehReqMessage</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>





                        </div>


                    </div>

                </div>

                <div class="tabs-panel" id="panel3v">

                    <div class="grid-container fluid">
                        <div class="cell">
                            <div class="grid-container fluid">

                                <div class="grid-x">

                                    @{
                                        foreach (var alert in Model.MessageDbs)
                                        {
                                            decimal? totalCost1 = 0.0m;

                                            //foreach (var service in alert.VehReq.ServiceReqDb)
                                            //{
                                            //    totalCost1 += service.Assign.Service.ServiceCost;
                                            //}

                                            <div class="cell small-4">

                                                <div class="card">

                                                    <div class="card-divider">
                                                        <h4>@alert.Message</h4>
                                                    </div>

                                                    <div class="card-section">

                                                        <div class="grid-container fluid">

                                                            <div class="grid-x">

                                                                <div class="cell small-6">
                                                                    <label>Auto Shop</label>
                                                                    <label>@alert.User.UserName</label>
                                                                    <br />
                                                                </div>

                                                                <div class="cell small-6">
                                                                    <label>Request Name</label>
                                                                    <label>@alert.VehReq.VehReqName</label>
                                                                    
                                                                    <br />
                                                                </div>

                                                                <div class="cell small-6">
                                                                    <label>Request Date</label>
                                                                    <label>@alert.VehReq.VehReqDate</label> 
                                                                    
                                                                    <br />
                                                                </div>

                                                                <div class="cell small-6">
                                                                    <label>Vehicle Make</label>
                                                                    <label>@alert.VehReq.Vehicle.VehicleMake</label>

                                                                    <br />
                                                                </div>


                                                                <div class="cell small-6">
                                                                    <label>Vehicle Model </label>
                                                                    <label>@alert.VehReq.Vehicle.VehicleModel</label>

                                                                    <br />
                                                                </div>


                                                                <div class="cell small-6">
                                                                    <label>Vehicle Year</label>
                                                                    <label>@alert.VehReq.Vehicle.VehicleYear</label>

                                                                    <br />
                                                                </div>

                                                                <div class="cell small-6">
                                                                    <label>Vehicle Owner</label>
                                                                    <label>@alert.VehReq.Vehicle.User.UserName</label>

                                                                </div>

                                                                <div class="cell">
                                                                    <hr />
                                                                    <h5>Services Requested </h5>
                                                                    <br />
                                                                </div>

                                                                <div class="cell small-6">
                                                                    <label>Services </label>
                                                                </div>

                                                                <div class="cell small-6">
                                                                    <label>Service Cost</label>
                                                                </div>

                                                                @foreach (var service in alert.VehReq.ServiceReqDb)
                                                                {
                                                                    totalCost1 += service.Assign.Service.ServiceCost;

                                                                    <div class="cell small-6">
                                                                        <label>@service.Assign.Service.ServiceName</label>
                                                                    </div>
                                                                    <div class="cell small-6">
                                                                        <label>$ @service.Assign.Service.ServiceCost</label>
                                                                    </div>
                                                                }

                                                                <div class="cell">
                                                                    <br />
                                                                    <label>Total Cost</label>
                                                                    <label>$ @totalCost1</label>
                                                                </div>

                                                                <div class="cell small-6">
                                                                    <a onclick="location.href='@(Url.Action("Serviced","Accounts", new { vehID = alert.VehReqId, shopID = alert.User.UserId,serCost = totalCost1, acceptance = true , shopPortfolio = false }))'" class="button">
                                                                        Accept
                                                                    </a>
                                                                </div>

                                                                <div class="cell small-6">
                                                                    <a onclick="location.href='@(Url.Action("Serviced","Accounts", new { vehID = alert.VehReqId, shopID = alert.User.UserId,serCost = totalCost1, acceptance = false , shopPortfolio = false }))'" class="button">
                                                                        Decline
                                                                    </a>
                                                                </div>

                                                            </div>

                                                        </div>

                                                    </div>

                                                </div>

                                            </div>
                                        }
                                    }

                                </div>

                            </div>



                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>





